{
  "manifest_version": 3,
  "name": "Email Scraper",
  "version": "1.0",
  "description": "Scrapes all available email addresses on the webpage and saves them to a file.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
